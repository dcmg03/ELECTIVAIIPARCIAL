<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Formulario de Registro</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Registro de Automoviles</h1>
    <form action="/add-object" method="POST" class="mt-4">
      <div class="form-group">
        <label for="departamento">Departamento:</label>
        <select id="departamento" name="departamento" class="form-control" required>
          <option value="" disabled selected>Selecciona un Departamento</option>
          <% departamentos.forEach(function(departamento) { %>
            <option value="<%= departamento.code %>"><%= departamento.name %></option>
          <% }); %>
        </select>
      </div>

      <div class="form-group">
        <label for="municipio">Municipio:</label>
        <select id="municipio" name="municipio" class="form-control" required>
          <option value="" disabled selected>Selecciona un Municipio</option>
        </select>
      </div>

      <h3>Información del Automovil</h3>
      <div class="form-group">
        <label for="carroMarca">Marca del Carro:</label>
        <input type="text" id="carroMarca" name="carroMarca" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="carroModelo">Modelo del Carro:</label>
        <input type="text" id="carroModelo" name="carroModelo" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="carroAnio">Año del Carro:</label>
        <input type="number" id="carroAnio" name="carroAnio" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="carroColor">Color del Carro:</label>
        <input type="text" id="carroColor" name="carroColor" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary">Agregar</button>
    </form>

    <h2 class="mt-5">Automoviles Registrados</h2>
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>Departamento</th>
          <th>Municipio</th>
          <th>Marca del Carro</th>
          <th>Modelo del Carro</th>
          <th>Año del Carro</th>
          <th>Color del Carro</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% objetos.forEach(function(objeto, index) { %>
          <tr>
            <td><%= objeto.departamento %></td>
            <td><%= objeto.municipio %></td>
            <td><%= objeto.carro.marca %></td>
            <td><%= objeto.carro.modelo %></td>
            <td><%= objeto.carro.anio %></td>
            <td><%= objeto.carro.color %></td>
            <td>
              <form action="/delete-object" method="POST" style="display:inline;">
                <input type="hidden" name="index" value="<%= index %>">
                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
              </form>
              <form action="/edit-object" method="GET" style="display:inline;">
                <input type="hidden" name="index" value="<%= index %>">
                <button type="submit" class="btn btn-warning btn-sm">Actualizar</button>
              </form>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <script>
    $('#departamento').change(function() {
      const departamento = $(this).val();
      $.post('/get-municipios', { departamento }, function(data) {
        const municipioSelect = $('#municipio');
        municipioSelect.empty();
        municipioSelect.append('<option value="" disabled selected>Selecciona un Municipio</option>');
        data.forEach(function(municipio) {
          municipioSelect.append('<option value="' + municipio + '">' + municipio + '</option>');
        });
      });
    });
  </script>
</body>
</html>
